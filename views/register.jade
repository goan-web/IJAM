extends layout_app

block header
	header.header.clearfix
		nav
			ul.nav.nav-pills.pull-right
				if docs
					<li role="presentation"><a href="/">IJAM</a></li>
					<li role="presentation"><a href="/settings">Settings</a></li>
					<li role="presentation"><a href="/settings/register">Register Admin</a></li>
					<li role="presentation"><a href="/settings/inscripciones">Inscripciones</a></li>
					<li role="presentation"><a href="/settings/noticias">Noticias</a></li>
					<li role="presentation"><a href="/settings/logout">Cerrar Sessi√≥n</a></li>
				else
					<li role="presentation"><a href="/">IJAM</a></li>

block content
	section.col-lg-5.col-md-4.col-sm-6.col-xs-12.col-md-offset-4
		h2.page-header Registrar Administradores
		form(method="post" action="/settings/register")
			div.form-group
				label Nombre
				input(type="text" class="form-control" placeholder="Nombre" name="name")
			div.form-group
				label Username
				input(type="text" class="form-control" placeholder="Username" name="username")
			div.form-group
				label Email
				input(type="email" class="form-control" placeholder="Username" name="email")
			div.form-group
				label Password
				input(type="password" class="form-control" placeholder="Password" name="password")
			div.form-group
				label Confirmar Password
				input(type="text" class="form-control" placeholder="Password" name="password2")
			button(type="submit" class="btn btn-default") Registrar