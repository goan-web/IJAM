					<li role="presentation"><a href="/settings/logout">Cerrar Sessi√≥n</a></li>
				else
					<li role="presentation"><a href="/">IJAM</a></li>

block content
	section
		h2 USERS
		P Lista de Administradores
		article.pre-scrollable
			if docs
			table.table
				thead.thead-inverse
					tr
						th Nombre
						th Username
						th Email
						th Password
				tbody
				each user in docs
					tr
						th #{user.name}
						th #{user.username}
						th #{user.email}
						th #{user.password2}


