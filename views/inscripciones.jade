extends layout_app
block header
	header.header.clearfix
		nav
			ul.nav.nav-pills.pull-right
				if contacts
					<li role="presentation"><a href="/">IJAM</a></li>
					<li role="presentation"><a href="/settings">Settings</a></li>
					<li role="presentation"><a href="/settings/register">Register Admin</a></li>
					<li role="presentation"><a href="/settings/inscripciones">Inscripciones</a></li>
					<li role="presentation"><a href="/settings/noticias">Noticias</a></li>
					<li role="presentation"><a href="/settings/logout">Cerrar Sessi√≥n</a></li>
				else
					<li role="presentation"><a href="/">IJAM</a></li>

block content
	section.contenedor
		h2 INSCRIPCIONES
		P Lista de Inscriptos
		article.pre-scrollable
			if contacts
			table.table
				thead.thead-inverse
					tr
						th NOMBRES Y APELLIDOS
						th CARRERA
						th TURNO
						th E-MAIL
						th SEDE
						th TELEFONO
				tbody
				each doc in contacts
					tr
						th #{doc.nombre}
						th #{doc.carrera}
						th #{doc.turno}
						th #{doc.email}
						th #{doc.sede}
						th #{doc.telefono}
